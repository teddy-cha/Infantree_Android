<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.connection.next.infantree" >
    <uses-permission android:name="android.permission.INTERNET" />
    <user-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <user-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <service
            android:name=".network.SyncDataService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.connection.next.infantree.network.SyncDataService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <provider
            android:authorities="com.connection.next.infantree.provider"
            android:name=".provider.PhotoProvider"
            android:enabled="true"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="com.connection.next.infantree.READ"
            android:writePermission="com.connection.next.infantree.WRITE" />

        <activity
            android:name="com.connection.next.infantree.home.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
